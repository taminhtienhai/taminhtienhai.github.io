{
    "$scheme": "./node_modules/oxlint/configuration_schema.json",
    "ignorePatterns": [
        "dist/**",
        "build/**",
        "node_modules/**",
        "*.lock",
        ".gitignore",
        ".npmrc",
        ".vscode/**",
        ".svelte-kit/**",
        "assets/**",
        "static/**",
        "docs/**"
    ],
    "rules": {
        "sort-keys": "off",
        "sort-imports": "off",
        "no-unused-vars": "warn",
        "func-style": "off",
        "consistent-type-definitions": "off",
        "filename-case": "off"
    }
}
