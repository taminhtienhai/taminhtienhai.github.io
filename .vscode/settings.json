{
    "oxc.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/._*": true,
        "node_modules/": true
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "files.associations": {
        "*.svx": "svelte"
    },
    "[svelte]": {
        "editor.wordWrap": "on"
    }
}