{
    // "oxc.enable": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/._*": true,
        "node_modules/": true
    },
    "files.associations": {
        "*.svx": "markdown",
    },
    "[svelte]": {
        "editor.wordWrap": "on"
    },
    "search.useIgnoreFiles": true,
}